---
import { Image } from "astro:assets";
import mecedesIcon from "../../public/mercedes_ico.svg";
---

<header
  class="fixed top-0 left-0 right-0 w-full bg-black/80 backdrop-blur-md z-50 border-b border-amber-400/20"
>
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo Mercedes con efecto brillo -->
      <a
        href="/"
        class="group relative p-2 rounded-full transition-all duration-300"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-amber-400 to-yellow-500 rounded-full opacity-0 group-hover:opacity-30 blur-md group-hover:animate-pulse transition-all duration-500"
        >
        </div>
        <Image
          src={mecedesIcon}
          alt="Mercedes-Benz"
          width={40}
          height={40}
          class="w-10 h-10 relative z-10"
        />
      </a>

      <!-- Navegación con subrayado animado -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="#inicio"
          class="relative text-white/90 font-medium text-base group"
        >
          <span class="relative z-10">Inicio</span>
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-amber-400 to-yellow-400 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="#novedades"
          class="relative text-white/90 font-medium text-base group"
        >
          <span class="relative z-10">Novedades</span>
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-amber-400 to-yellow-400 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
        <a
          href="#tecnologia"
          class="relative text-white/90 font-medium text-base group"
        >
          <span class="relative z-10">Tecnología</span>
          <span
            class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-amber-400 to-yellow-400 transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
      </div>

      <!-- Botón CTA -->
      <div class="hidden md:block">
        <a
          href="#contacto"
          class="px-6 py-2.5 text-sm font-medium text-black bg-gradient-to-r from-amber-400 to-yellow-400 rounded-full hover:shadow-lg hover:shadow-amber-500/30 transition-all duration-300 transform hover:scale-105"
        >
          Contacto
        </a>
      </div>

      <!-- Menú móvil (hamburguesa) -->
      <div class="md:hidden">
        <button class="text-white/90 hover:text-white focus:outline-none">
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<!-- Espacio para el contenido -->
<div class="h-20"></div>

<style>
  /* Efecto de brillo sutil en el hover del logo */
  header a:hover {
    transform: translateY(-1px);
  }

  /* Asegurar que el backdrop-filter funcione en todos los navegadores */
  header {
    -webkit-backdrop-filter: blur(12px);
    backdrop-filter: blur(12px);
  }
</style>
